<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:width="17dp"
                android:height="3dp"
                android:bottom="3dp"
                android:gravity="bottom|center_horizontal">
